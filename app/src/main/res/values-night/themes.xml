<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OurMoney" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/OurRed</item>
        <item name="colorPrimaryVariant">@color/OurRedLight</item>
        <item name="colorOnPrimary">@color/OurRedCharmingBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/OurRedLight</item>
        <item name="colorSecondaryVariant">@color/OurRedDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>


    </style>
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/OurRedDesaturated</item>
        <item name="colorOnPrimary">@color/OurRedLight</item>
        <item name="colorOnSecondary">@color/OurRedDesaturated</item>
    </style>
</resources>