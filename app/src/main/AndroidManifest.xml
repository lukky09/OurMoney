<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ourmoney">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ourmoney"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ourmoney"
        android:supportsRtl="true"
        android:theme="@style/Theme.OurMoney">
        <activity
            android:name=".Activities.StoreDataActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.DetailActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.NameRequestActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.AddTargetActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.AddTransactionActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.AddCategoryOrWalletActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.CategoryAndWalletActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.ReportActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.SplashActivity"
            android:exported="true"
            android:theme="@style/splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>